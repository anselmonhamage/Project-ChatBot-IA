# Configuração do Ambiente de Desenvolvimento FLASK
SECRET_KEY=um-nome-bem-seguro
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_DEVELOPMENT_PORT=8000

# Configuração da Base de Dados SQL Server
MSSQL_SERVER=localhost\SQLEXPRESS
MSSQL_DB=chatbot
MSSQL_DRIVER=ODBC Driver 17 for SQL Server

# Twilio Configuration (WhatsApp Integration - Optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=your-twilio-whatsapp-number
MY_WHATSAPP_NUMBER=your-personal-whatsapp-number

OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=qwen3:1.7b
OLLAMA_MODEL=qwen3:1.7b
OLLAMA_TEMPERATURE=0.7
OLLAMA_TOP_P=0.9
OLLAMA_TOP_K=40
OLLAMA_MAX_TOKENS=2048
OLLAMA_TIMEOUT=240

# Configuração do servidor MCP
MCP_SERVER_PATH=caminho/script.py
MCP_SERVER_TYPE=ollama  # or 'gemini' or 'anthropic'

# Configuração da chave Anthropic (Se estiver usando Anthropic MCP)
ANTHROPIC_API_KEY=your-anthropic-api-key

GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.0-flash
DEFAULT_MODEL=gemini

# Configuração do Pix2Latex
TESSERACT_PATH=C:\Program Files\Tesseract-OCR\tesseract.exe

# Configuração do Upload
UPLOAD_FOLDER=app/static/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# Prompts de Contexto Educacional
PROGRAMMING_PROMPT=Você é um assistente educacional especializado em programação. Ajude o estudante com conceitos de programação, debug de código, explicações de algoritmos e boas práticas de desenvolvimento.
MATH_PROMPT=Você é um assistente educacional especializado em matemática. Ajude o estudante com resolução de problemas matemáticos, explicações de conceitos, fórmulas e métodos de cálculo.
TRANSLATION_PROMPT=Você é um assistente educacional especializado em tradução e linguística. Ajude o estudante com traduções, explicações gramaticais, vocabulário e compreensão de textos em diferentes idiomas.

# Desabilitar checks de atualização (performance)
NO_ALBUMENTATIONS_UPDATE=1
PYTHONWARNINGS=ignore
TF_CPP_MIN_LOG_LEVEL=2

# Escolha de uso do SQLITE
USE_SQLITE=True
